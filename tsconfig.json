{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "incremental": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "baseUrl": ".",
    "paths": {
      "@/*": ["renderer/*"]
    },
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  // "include": [
  //   "renderer/**/*.ts",
  //   "renderer/**/*.tsx",
  //   "main/**/*.ts",
  //   "main/**/*.js"
  // ],
  "exclude": ["node_modules", "renderer/next.config.js", "dist", "app"]
}
